<div id="header">
  <div id="welcome">
    <% if @current_user %>
      <span><%=h @current_user.name_to_display %></span>
      <span>&nbsp;&nbsp;</span>
      <a href="#" id="jumper">Quick find</a> |
      <%= link_to "Profile", edit_user_path(:current) %> |
      <% if @current_user.admin? %>
        Admin |
      <% end %>
      <%= link_to "Logout", logout_path %>
    <% else %>
      <%= link_to "Login", login_path %> |
      <%= link_to "Sign Up", signup_path %> |
      <%= link_to "About", "#about" %>
    <% end %>
  </div>
  <h3>
    <%= link_to "MasterLab", root_path %>
  </h3>
</div>
