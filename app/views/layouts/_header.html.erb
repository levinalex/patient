<div id="header">
  <div id="welcome">
    <% if @current_user %>
      <span><%=h @current_user.name_to_display %></span>
      <span>&nbsp;&nbsp;</span>
      
      <%= link_to ("Quick find", "#", :id => "jumper") %> |
      <%= link_to "Profile", profile_path %> |
      <% if @current_user.admin? %>
        <%= link_to "Admin", admin_path %> |
      <% end %>
      <%= link_to "Logout", logout_path %>
      <%= render "layouts/jumpbox" %>
    <% else %>
      <%= link_to "Login", login_path %> |
      <%= link_to "Sign Up", signup_path %> |
      <%= link_to "About", "#about" %>
    <% end %>
  </div>
  <h3><%= link_to "MasterLab", root_path %></h3>
</div>
