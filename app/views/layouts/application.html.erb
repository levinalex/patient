<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'application', 'jquery-ui' %>
    <%= javascript_include_tag 'jquery', 'jquery-ui', 'application' %>
    <!--%= javascript_include_tag :defaults %-->
    <%= yield(:head) %>
  </head>
  <body>
    <ul id="menu">
      <li><%= link_to "Patients", :patients %></li>
      <li><%= link_to "Accessions", :accessions %></li>
      <% if current_user %>
        <li><%= link_to "Edit Profile", edit_user_path(:current) %></li>
        <li><%= link_to "Logout", logout_path %></li>
      <% else %>
        <li><%= link_to "Register", new_user_path %></li>
        <li><%= link_to "Login", login_path %></li>
      <% end %>
    </ul>
    <div id="container">      
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <%- end -%>
      
      <%- if show_title? -%>
        <h2><%=h yield(:title) %></h2>
      <%- end -%>
      
      <%= yield %>
    </div>
  </body>
</html>
